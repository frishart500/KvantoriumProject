<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create_task.CreateTaskFragment"
    android:id="@+id/create">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Создание задания"
        android:textColor="#601C80"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout9"
        android:layout_width="312dp"
        android:layout_height="71dp"
        android:background="@drawable/edit_find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.024">


        <EditText
            android:id="@+id/nameOfTask"
            android:layout_width="257dp"
            android:layout_height="29dp"
            android:background="@android:color/transparent"
            android:hint="Название задания"
            android:textColor="@color/main"
            android:inputType="textEmailAddress"
            android:textColorHint="#601C80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="312dp"
        android:layout_height="71dp"
        android:background="@drawable/edit_find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/subjectProblem"
            android:layout_width="257dp"
            android:layout_height="29dp"
            android:background="@android:color/transparent"
            android:hint="Предмет"
            android:textColor="@color/main"
            android:inputType="textEmailAddress"
            android:textColorHint="#601C80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="312dp"
        android:layout_height="71dp"
        android:background="@drawable/edit_find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/classOfUserInTask"
            android:layout_width="257dp"
            android:layout_height="29dp"
            android:background="@android:color/transparent"
            android:hint="Класс"
            android:textColor="@color/main"
            android:inputType="phone"
            android:textColorHint="#601C80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="312dp"
        android:layout_height="71dp"
        android:background="@drawable/edit_find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout8"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/dateToFinish"
            android:layout_width="257dp"
            android:layout_height="29dp"
            android:background="@android:color/transparent"
            android:hint="Срок"
            android:inputType="date"
            android:textColor="@color/main"
            android:textColorHint="#601C80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/calendar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.944"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.456" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs6"
        android:layout_width="312dp"
        android:layout_height="180dp"
        android:background="@drawable/edit_find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout10"
        app:layout_constraintVertical_bias="0.006">


        <EditText
            android:id="@+id/describe"
            android:layout_width="237dp"
            android:layout_height="94dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:hint="Описание задания..."
            android:inputType="text|textMultiLine|textCapSentences"
            android:textColor="@color/main"
            android:textColorHint="#601C80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.386"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.29" />

        <ImageView
            android:id="@+id/addPhotoForTask"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/main"
            android:src="@drawable/add_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <ImageView
            android:id="@+id/taskImage"
            android:layout_width="26dp"
            android:layout_height="19dp"
            android:visibility="gone"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/describe"
            app:layout_constraintTop_toBottomOf="@+id/describe"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:src="@drawable/back_cross"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toEndOf="@+id/taskImage"
            app:layout_constraintTop_toBottomOf="@+id/describe"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout10"
        android:layout_width="312dp"
        android:layout_height="71dp"
        android:background="@drawable/edit_find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7"
        app:layout_constraintVertical_bias="0.003">


        <EditText
            android:id="@+id/points"
            android:layout_width="257dp"
            android:layout_height="29dp"
            android:background="@android:color/transparent"
            android:hint="Цена"
            android:inputType="phone"
            android:textColor="@color/main"
            android:textColorHint="#601C80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/postTask"
        android:layout_width="284dp"
        android:layout_height="61dp"
        android:backgroundTint="@color/main"
        android:text="Готово!"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cs6"
        app:layout_constraintStart_toStartOf="@+id/cs6"
        app:layout_constraintTop_toBottomOf="@+id/cs6"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>