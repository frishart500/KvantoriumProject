<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/cl_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_for_card"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.094" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="хочет выполнить задание:"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toTopOf="@+id/name"
                app:layout_constraintVertical_bias="0.164" />



            <TextView
                android:id="@+id/nameOfTask"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Домашка по алгебре "
                android:layout_marginLeft="20dp"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Вы согласны?"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nameOfTask"
                app:layout_constraintTop_toBottomOf="@+id/nameOfTask"
                app:layout_constraintVertical_bias="0.125" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="113dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/main"
                    android:text="Да"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/no"
                    android:layout_width="113dp"
                    android:layout_height="61dp"
                    android:backgroundTint="@color/main"
                    android:text="Нет"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false" />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>