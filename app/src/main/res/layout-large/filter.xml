<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="330dp"
    android:id="@+id/preview"
    android:background="@drawable/back_for_card"
    android:layout_margin="15dp"
    android:layout_gravity="center"
    android:scaleType = "centerCrop">

    <TextView
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="-Выберите желаемую цену:"
        android:textColor="#601C80"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="100"
            android:textColor="#601C80"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/znak" />

    </LinearLayout>



    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:progressTint="#00000000"
        android:gravity="center"
        android:progressBackgroundTint="#AD32E6"
        android:layout_marginLeft="40dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:text="100"
            android:textColor="#601C80"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/znak" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="200dp"
            android:text="500"
            android:textColor="#601C80"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/znak" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите класс:"
            android:textColor="#601C80"
            android:textSize="20sp"/>

            <EditText
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_find"
                android:id="@+id/find_class"
                android:padding="10dp"
                android:textColor="@color/main"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/yes"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn"
            android:text="Готово!"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>